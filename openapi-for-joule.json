{
    "openapi": "3.1.0",
    "info": {
        "title": "Talent Management Intent Classifier API",
        "description": "\nClassifies user queries related to SAP SuccessFactors Talent Management\nand returns relevant help portal links.\n\n## Features\n- Identifies if a query relates to Talent Management\n- Classifies queries into 8 specific TM topics\n- Returns relevant SAP Help Portal documentation links\n\n## Topics Supported\n- Performance Management\n- Learning & Development\n- Recruitment\n- Compensation & Benefits\n- Succession Planning\n- Employee Onboarding\n- Time & Attendance\n- Employee Central\n    ",
        "version": "1.0.0"
    },
    "paths": {
        "/health": {
            "get": {
                "tags": [
                    "Health"
                ],
                "summary": "Health Check",
                "description": "Health check endpoint for Cloud Foundry and monitoring.\n\nReturns the service status, name, and version.",
                "operationId": "health_check_health_get",
                "responses": {
                    "200": {
                        "description": "Successful Response",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/HealthResponse"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/v1/classify": {
            "post": {
                "tags": [
                    "Classification"
                ],
                "summary": "Classify a user query",
                "description": "Analyzes a user query to determine if it relates to Talent Management and identifies the specific topic.",
                "operationId": "classify_query_api_v1_classify_post",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/ClassifyRequest"
                            }
                        }
                    },
                    "required": true
                },
                "responses": {
                    "200": {
                        "description": "Successful Response",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/ClassifyResponse"
                                }
                            }
                        }
                    },
                    "422": {
                        "description": "Validation Error",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/HTTPValidationError"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/": {
            "get": {
                "tags": [
                    "Root"
                ],
                "summary": "Root",
                "description": "Root endpoint with API information.",
                "operationId": "root__get",
                "responses": {
                    "200": {
                        "description": "Successful Response",
                        "content": {
                            "application/json": {
                                "schema": {}
                            }
                        }
                    }
                }
            }
        }
    },
    "components": {
        "schemas": {
            "ClassifyRequest": {
                "properties": {
                    "query": {
                        "type": "string",
                        "maxLength": 2000,
                        "minLength": 1,
                        "title": "Query",
                        "description": "The user query to classify",
                        "example": "How do I submit my annual performance review?"
                    },
                    "show_pipeline": {
                        "type": "boolean",
                        "title": "Show Pipeline",
                        "description": "Include orchestration pipeline processing details in response (for demos)",
                        "default": false
                    }
                },
                "type": "object",
                "required": [
                    "query"
                ],
                "title": "ClassifyRequest",
                "description": "Request model for the classification endpoint."
            },
            "ClassifyResponse": {
                "properties": {
                    "is_talent_management": {
                        "type": "boolean",
                        "title": "Is Talent Management",
                        "description": "Whether the query relates to Talent Management"
                    },
                    "confidence": {
                        "type": "number",
                        "maximum": 1.0,
                        "minimum": 0.0,
                        "title": "Confidence",
                        "description": "Confidence score of the classification (0.0 to 1.0)"
                    },
                    "topic": {
                        "anyOf": [
                            {
                                "type": "string"
                            },
                            {
                                "type": "null"
                            }
                        ],
                        "title": "Topic",
                        "description": "The identified topic key (e.g., 'performance_management')"
                    },
                    "topic_display_name": {
                        "anyOf": [
                            {
                                "type": "string"
                            },
                            {
                                "type": "null"
                            }
                        ],
                        "title": "Topic Display Name",
                        "description": "Human-readable topic name (e.g., 'Performance Management')"
                    },
                    "links": {
                        "items": {
                            "$ref": "#/components/schemas/LinkInfo"
                        },
                        "type": "array",
                        "title": "Links",
                        "description": "Relevant SAP Help Portal links"
                    },
                    "summary": {
                        "type": "string",
                        "title": "Summary",
                        "description": "A brief summary message about the classification result"
                    },
                    "pipeline": {
                        "anyOf": [
                            {
                                "$ref": "#/components/schemas/PipelineDetails"
                            },
                            {
                                "type": "null"
                            }
                        ],
                        "description": "Pipeline processing details (when show_pipeline=true)"
                    }
                },
                "type": "object",
                "required": [
                    "is_talent_management",
                    "confidence",
                    "summary"
                ],
                "title": "ClassifyResponse",
                "description": "Response model for the classification endpoint.",
                "examples": [
                    {
                        "confidence": 0.95,
                        "is_talent_management": true,
                        "links": [
                            {
                                "description": "Complete guide to Performance Management in SuccessFactors",
                                "title": "Performance & Goals Administration",
                                "url": "https://help.sap.com/docs/SAP_SUCCESSFACTORS_PERFORMANCE_GOALS"
                            }
                        ],
                        "summary": "Your question is about Performance Management. Here are helpful resources.",
                        "topic": "performance_management",
                        "topic_display_name": "Performance Management"
                    },
                    {
                        "confidence": 0.92,
                        "is_talent_management": false,
                        "links": [],
                        "summary": "This query doesn't appear to be related to Talent Management."
                    }
                ]
            },
            "ContentFilterScores": {
                "properties": {
                    "hate": {
                        "type": "integer",
                        "title": "Hate",
                        "description": "Hate speech score (0=safe)",
                        "default": 0
                    },
                    "self_harm": {
                        "type": "integer",
                        "title": "Self Harm",
                        "description": "Self-harm content score",
                        "default": 0
                    },
                    "sexual": {
                        "type": "integer",
                        "title": "Sexual",
                        "description": "Sexual content score",
                        "default": 0
                    },
                    "violence": {
                        "type": "integer",
                        "title": "Violence",
                        "description": "Violence content score",
                        "default": 0
                    },
                    "passed": {
                        "type": "boolean",
                        "title": "Passed",
                        "description": "Whether content passed filtering"
                    }
                },
                "type": "object",
                "required": [
                    "passed"
                ],
                "title": "ContentFilterScores",
                "description": "Content safety scores from Azure Content Safety."
            },
            "ContentFilteringDetails": {
                "properties": {
                    "input": {
                        "$ref": "#/components/schemas/ContentFilterScores",
                        "description": "Input content filter scores"
                    },
                    "output": {
                        "$ref": "#/components/schemas/ContentFilterScores",
                        "description": "Output content filter scores"
                    }
                },
                "type": "object",
                "required": [
                    "input",
                    "output"
                ],
                "title": "ContentFilteringDetails",
                "description": "Input and output content filter results."
            },
            "DataMaskingDetails": {
                "properties": {
                    "original_query": {
                        "type": "string",
                        "title": "Original Query",
                        "description": "Original user query"
                    },
                    "masked_query": {
                        "type": "string",
                        "title": "Masked Query",
                        "description": "Query after PII anonymization"
                    },
                    "entities_masked": {
                        "items": {
                            "type": "string"
                        },
                        "type": "array",
                        "title": "Entities Masked",
                        "description": "Types of PII detected and masked"
                    }
                },
                "type": "object",
                "required": [
                    "original_query",
                    "masked_query"
                ],
                "title": "DataMaskingDetails",
                "description": "Details about PII masking applied to the query."
            },
            "HTTPValidationError": {
                "properties": {
                    "detail": {
                        "items": {
                            "$ref": "#/components/schemas/ValidationError"
                        },
                        "type": "array",
                        "title": "Detail"
                    }
                },
                "type": "object",
                "title": "HTTPValidationError"
            },
            "HealthResponse": {
                "properties": {
                    "status": {
                        "type": "string",
                        "title": "Status",
                        "description": "Health status of the service"
                    },
                    "service": {
                        "type": "string",
                        "title": "Service",
                        "description": "Name of the service"
                    },
                    "version": {
                        "type": "string",
                        "title": "Version",
                        "description": "API version"
                    }
                },
                "type": "object",
                "required": [
                    "status",
                    "service",
                    "version"
                ],
                "title": "HealthResponse",
                "description": "Response model for health check endpoint."
            },
            "LLMDetails": {
                "properties": {
                    "model": {
                        "type": "string",
                        "title": "Model",
                        "description": "Model used for classification"
                    },
                    "prompt_tokens": {
                        "type": "integer",
                        "title": "Prompt Tokens",
                        "description": "Tokens in the prompt",
                        "default": 0
                    },
                    "completion_tokens": {
                        "type": "integer",
                        "title": "Completion Tokens",
                        "description": "Tokens in the response",
                        "default": 0
                    }
                },
                "type": "object",
                "required": [
                    "model"
                ],
                "title": "LLMDetails",
                "description": "Details about the LLM processing."
            },
            "LLMMessage": {
                "properties": {
                    "role": {
                        "type": "string",
                        "title": "Role",
                        "description": "Message role (system/user)"
                    },
                    "content": {
                        "type": "string",
                        "title": "Content",
                        "description": "Message content (with PII masked)"
                    }
                },
                "type": "object",
                "required": [
                    "role",
                    "content"
                ],
                "title": "LLMMessage",
                "description": "A message in the LLM conversation."
            },
            "LinkInfo": {
                "properties": {
                    "title": {
                        "type": "string",
                        "title": "Title",
                        "description": "Title of the help resource"
                    },
                    "url": {
                        "type": "string",
                        "title": "Url",
                        "description": "URL to the SAP Help Portal page"
                    },
                    "description": {
                        "type": "string",
                        "title": "Description",
                        "description": "Brief description of the resource"
                    }
                },
                "type": "object",
                "required": [
                    "title",
                    "url",
                    "description"
                ],
                "title": "LinkInfo",
                "description": "Information about a help resource link."
            },
            "PipelineDetails": {
                "properties": {
                    "data_masking": {
                        "anyOf": [
                            {
                                "$ref": "#/components/schemas/DataMaskingDetails"
                            },
                            {
                                "type": "null"
                            }
                        ],
                        "description": "PII masking details (null if no masking configured)"
                    },
                    "content_filtering": {
                        "$ref": "#/components/schemas/ContentFilteringDetails",
                        "description": "Input/output content filter results"
                    },
                    "llm": {
                        "$ref": "#/components/schemas/LLMDetails",
                        "description": "LLM processing details"
                    },
                    "messages_to_llm": {
                        "items": {
                            "$ref": "#/components/schemas/LLMMessage"
                        },
                        "type": "array",
                        "title": "Messages To Llm",
                        "description": "Exact messages sent to the LLM (after masking)"
                    }
                },
                "type": "object",
                "required": [
                    "content_filtering",
                    "llm",
                    "messages_to_llm"
                ],
                "title": "PipelineDetails",
                "description": "Orchestration pipeline processing details."
            },
            "ValidationError": {
                "properties": {
                    "loc": {
                        "items": {
                            "anyOf": [
                                {
                                    "type": "string"
                                },
                                {
                                    "type": "integer"
                                }
                            ]
                        },
                        "type": "array",
                        "title": "Location"
                    },
                    "msg": {
                        "type": "string",
                        "title": "Message"
                    },
                    "type": {
                        "type": "string",
                        "title": "Error Type"
                    },
                    "input": {
                        "title": "Input"
                    },
                    "ctx": {
                        "type": "object",
                        "title": "Context"
                    }
                },
                "type": "object",
                "required": [
                    "loc",
                    "msg",
                    "type"
                ],
                "title": "ValidationError"
            }
        }
    }
}
